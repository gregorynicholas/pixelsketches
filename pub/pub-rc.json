{
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
        "name": "pub-v1-3"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "name": "pub",
            "version": "1-3"
        },
        "template": {
            "metadata": {
                "labels": {
                    "name": "pub",
                    "version": "1-3"
                }
            },
            "spec": {
                "containers": [
                    {
                        "image": "gcr.io/golang-game-of-life/pub:v1-3",
                        "name": "pub",
                        "ports": [
                            {
                                "containerPort": 5000,
                                "hostPort": 5000,
                                "protocol": "TCP"
                            }
                        ]
                    }
                ]
            }
        }
    }
}
